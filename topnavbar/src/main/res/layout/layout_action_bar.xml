<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_action_bar_height"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >

    <TextView
        android:id="@+id/tv_action_bart_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawablePadding="5dp"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:maxWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="返回"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:id="@+id/ll_right_action"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_action_bar_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="gone"
            tools:text="完成" />

        <TextView
            android:id="@+id/tv_action_bar_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:visibility="gone"
            tools:visibility="gone"
            android:layout_weight="1"
            tools:text="完成" />

        <TextView
            android:id="@+id/tv_action_bar_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="gone"
            tools:text="完成"
            />

    </LinearLayout>

    <View
        android:id="@+id/view_left_empty"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/view_right_empty"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_action_bar_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintRight_toLeftOf="@+id/view_right_empty"
        app:layout_constraintLeft_toRightOf="@+id/view_left_empty"
        android:background="?selectableItemBackgroundBorderless"
        android:lines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:textSize="@dimen/d_action_bar_title_size"
        android:gravity="center"
        tools:text="TitleTitleTitle"
        android:layout_centerInParent="true"
        />

</merge>


