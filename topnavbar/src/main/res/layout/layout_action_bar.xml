<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_height="@dimen/d_action_bar_height"
        >

<!--<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_action_bar_height"
        tools:showIn="RelativeLayout"
    >-->

    <TextView
        android:id="@+id/tv_action_bart_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="@dimen/d_action_bar_title_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="返回" />

    <View
        android:id="@+id/view_place_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"
        tools:layout_width="60dp"
        />

    <TextView
        android:id="@+id/tv_action_bar_01"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_action_bar_02"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="完成" />

    <TextView
        android:id="@+id/tv_action_bar_02"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_action_bar_03"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="完成"
        />

    <TextView
        android:id="@+id/tv_action_bar_03"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="完成"
        />

    <TextView
        android:id="@+id/tv_action_bar_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_action_bart_left"
        app:layout_constraintRight_toLeftOf="@+id/view_place_holder"
        android:background="?selectableItemBackgroundBorderless"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/d_action_bar_title_size"
        android:gravity="center"
        android:maxLength="15"
        tools:text="标题"
        />

<!--
</merge>
-->

</androidx.constraintlayout.widget.ConstraintLayout>
