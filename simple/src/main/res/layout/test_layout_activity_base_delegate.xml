<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shine_base_activity_container"
    >

    <LinearLayout
        android:id="@+id/ll_delegate_action_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        >

        <com.sovegetables.topnavbar.ActionBarView
            android:id="@+id/delegate_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.sovegetables.topnavbar.ActionBarView>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_base_delegate_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_delegate_action_bar_container"
        >
    </FrameLayout>

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/qmui_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_delegate_action_bar_container"
        android:visibility="gone"
        tools:visibility="visible"
        />

</RelativeLayout>